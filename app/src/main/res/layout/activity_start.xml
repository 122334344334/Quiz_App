<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_start"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="16dp"
    tools:context=".StartActivity">

    <TextView
        android:id="@+id/textViewStartTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/start_screen_title"
        android:textSize="34sp"
        android:textStyle="bold"
        android:layout_marginBottom="32dp"/>

    <Button
        android:id="@+id/buttonSelectQuiz"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button_select_quiz"
        android:layout_marginBottom="16dp"/>

    <!-- Optional: TextView to show selected quiz -->
    <TextView
        android:id="@+id/textViewSelectedQuiz"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:layout_marginBottom="24dp"
        tools:text="Ausgewählt: Hauptstädte"/>

    <Button
        android:id="@+id/buttonStartQuiz"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button_start_quiz"
        android:enabled="false"/>

</LinearLayout>